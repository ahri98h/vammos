# ============================================
# ARQUIVO .env - VARIÁVEIS DE AMBIENTE
# ============================================

# ===== SERVIDOR =====
PORT=3001
NODE_ENV=development
APP_URL=http://localhost:3001

# ===== BANCO DE DADOS =====
# Para desenvolvimento local (SQLite):
DATABASE_LOCAL=./database.sqlite

# Para produção (PostgreSQL):
DATABASE_URL=postgresql://user:password@localhost:5432/leidy_cleaner

# ===== JWT - AUTENTICAÇÃO =====
JWT_SECRET=sua_chave_super_secreta_aqui_mude_isso
JWT_REFRESH_SECRET=sua_chave_refresh_super_secreta_aqui_mude_isso
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===== EMAIL - NODEMAILER =====
# Gmail: Usar senha de app (não senha comum)
# Ativar: https://accounts.google.com/b/0/AppPasswords
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app_google_16_caracteres
EMAIL_FROM=noreply@leidycleaner.com.br

# ===== SMS - TWILIO =====
# Criar conta em: https://www.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+5511987654321

# ===== PAGAMENTO - STRIPE =====
# Chaves de teste: https://dashboard.stripe.com/test/apikeys
# NUNCA usar chaves reais em desenvolvimento!
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===== SOCKET.IO - CHAT =====
SOCKETIO_ENABLED=true
SOCKETIO_PATH=/socket.io
SOCKETIO_CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# ===== CLOUD STORAGE (Opcional - para fotos) =====
# AWS S3
AWS_ACCESS_KEY_ID=seu_aws_key
AWS_SECRET_ACCESS_KEY=sua_aws_secret
AWS_S3_BUCKET=seu_bucket_name
AWS_S3_REGION=us-east-1

# ===== GOOGLE MAPS =====
GOOGLE_MAPS_API_KEY=sua_chave_google_maps_aqui

# ===== LOGGING =====
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ===== FEATURES FLAGS =====
ENABLE_EMAIL=true
ENABLE_SMS=true
ENABLE_CHAT=true
ENABLE_PHOTOS=true
ENABLE_RECURRING=true

# ===== CONFIGURAÇÕES DE NEGÓCIO =====
COMMISSION_STAFF_PERCENTAGE=10
LOYALTY_BONUS_AMOUNT=100
LOYALTY_BONUS_THRESHOLD=10
RECURRING_DISCOUNT_PERCENTAGE=10
MAX_UPLOAD_SIZE=10485760

# ===== CORS =====
CORS_ORIGIN=http://localhost:3001,http://localhost:3000,https://seu_dominio.com

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== BANCO DE DADOS - POOL =====
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
